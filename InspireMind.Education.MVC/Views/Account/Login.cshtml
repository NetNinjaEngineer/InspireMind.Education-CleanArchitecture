@model LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<partial name="_AccountNavigationPartial" />

<div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
    <form asp-action="Login" method="post">
        <div data-mdb-input-init class="form-outline mb-4">
            <input type="email" id="loginName" class="form-control" asp-for="Email" />
            <label class="form-label" for="loginName" asp-for="Email">Email or username</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>


        <div data-mdb-input-init class="form-outline mb-4">
            <input type="password" id="loginPassword" class="form-control" asp-for="Password" />
            <label class="form-label" for="loginPassword" asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div> 

        <div class="row mb-4">
            <div class="col-md-6 d-flex justify-content-center">
                <div class="form-check mb-3 mb-md-0">
                    <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                    <label class="form-check-label" for="loginCheck"> Remember me </label>
                </div>
            </div>

            <div class="col-md-6 d-flex justify-content-center">
                <a asp-action="ForgetPassword">Forgot password?</a>
            </div>
        </div>

        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Sign in</button>

        <div class="text-center">
            <p>Not a member? <a asp-action="Register">Register</a></p>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
