@model InspireMind.Education.MVC.Models.RequestConfirmEmailVM

@{
    ViewData["Title"] = "RequestConfirmEmail";
    var successMessage = ViewBag.EmailConfirmationSent as string;
}

<h1>RequestConfirmEmail</h1>

<h4>RequestConfirmEmailVM</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="RequestConfirmEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="clientUri" value="@ViewBag.ClientUri" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
