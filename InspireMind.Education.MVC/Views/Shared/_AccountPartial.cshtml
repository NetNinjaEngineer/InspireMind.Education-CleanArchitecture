@if(User.Identity!.IsAuthenticated)
{
   <span>@User.FindFirst("sub")?.Value</span>
  <form asp-action="Logout" asp-controller="Account" method="post" style="display:inline;">
        <button type="submit" class="btn btn-outline-secondary">Logout</button>
  </form>
}
else
{
    <a asp-action="Register" asp-controller="Account" class="btn btn-link">Register</a>
    <a asp-action="Login" asp-controller="Account" class="btn btn-link">Login</a>
}