@model ForgetPasswordModel
@inject IConfiguration configuration

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var clientUri = configuration.GetSection("ClientUri").Value;
}


<h1>ForgetPassword</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="card text-center" style="width: 300px;">
    <div class="card-header h5 text-white bg-primary">Forget Password</div>
    <div class="card-body px-5">
        <p class="card-text py-2">
            Enter your email address and we'll send you an email with instructions to reset your password.
        </p>
        <form asp-action="ForgetPassword" method="post">
            <input type="text" hidden name="clientUri" value="@clientUri" />
            <div data-mdb-input-init class="form-outline">
                <input type="email" id="typeEmail" class="form-control my-3" asp-for="Email" />
                <label class="form-label" for="typeEmail" asp-for="Email"></label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <button type="submit" data-mdb-ripple-init class="btn btn-primary w-100">Reset password</button>
            <div class="d-flex justify-content-between mt-4">
                <a class="" asp-action="Login">Login</a>
                <a class="" asp-action="Register">Register</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
